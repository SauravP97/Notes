<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".NoteActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.notes.NOTEACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateNew"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.notes.CreateNew" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".ViewNote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.notes.ViewNote" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OpenNote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.notes.OpenNote" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".DeleteNote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.notes.DeleteNote" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModifyNote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.notes.ModifyNote" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>